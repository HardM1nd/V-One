# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
# Для использования удаленной PostgreSQL БД:
USE_SQLITE=False
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=5432

# Для использования локальной SQLite (для разработки):
# USE_SQLITE=True
# Остальные DB_* переменные не нужны

# MinIO/S3 Storage Settings
# Включить использование MinIO для хранения медиа файлов
USE_S3=True

# MinIO Credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=media

# MinIO URLs
# Внутренний URL для доступа к MinIO из контейнера (для Django)
AWS_S3_ENDPOINT_URL=http://minio:9000
# Публичный URL для доступа к MinIO из браузера (опционально, если не указан, используется прокси Django)
AWS_S3_PUBLIC_URL=http://localhost:9000
# Кастомный домен (опционально)
AWS_S3_CUSTOM_DOMAIN=localhost:9000

# AWS S3 Settings (используются те же значения что и MinIO)
AWS_ACCESS_KEY_ID=${MINIO_ROOT_USER}
AWS_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}
AWS_STORAGE_BUCKET_NAME=${MINIO_BUCKET_NAME}
AWS_S3_USE_SSL=False
